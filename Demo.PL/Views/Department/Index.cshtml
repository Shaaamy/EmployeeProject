@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}
@if (TempData["Message"] is not null)
{
    <div id="MessageDiv" class="alert alert-success">
        @TempData["Message"]
    </div>
}

<a asp-action="Create" class="btn btn-success">Create New Department</a>
@if(Model.Count() > 0){
    <h1>All Departments</h1>
    <table class="table table-striped table-hover table-bordered  mt-3">
        <thead>
            <tr class="text-center align-baseline">
                <th scope="col">@Html.DisplayNameFor(D=>D.Code)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.Name)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var department in Model)
                {
                <tr class="text-center align-baseline">
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_ButtonPartialView" model="department.Id.ToString()" />
                </tr>
                }
            
            
        </tbody>
    </table>
}else
{
    <div>
        <h3 class="mt-5 alert alert-warning">There is No Departments</h3>
    </div>
}