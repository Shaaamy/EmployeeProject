@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="text-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			<input  asp-for="FirstName" placeholder="Your First Name" >
			<span asp-validation-for="FirstName"></span>
			<br />
			<input asp-for="LastName" placeholder="Your Last Name" >
			<span asp-validation-for="LastName"></span>
			<br />
			<input  asp-for="Email"  placeholder="Email" >
			<span asp-validation-for="Email"></span>
			<br />
			<input  asp-for="Password" placeholder="Password" >
			<span asp-validation-for="Password"></span>
			<br />
			<input  asp-for="ConfirmPassword" placeholder="Confirm Password" >
			<span asp-validation-for="ConfirmPassword"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}